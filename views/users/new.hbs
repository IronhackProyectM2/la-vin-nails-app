<div class="container view">
  
  

  <div class="card">

    <div class="card-header">
      <h1 class="view-title"><strong>Registrate</strong></h1>    
    </div>     

    <div class="card-body">

      <form action="/users" method="POST">      
       
        <div class="input-group mb-4 mt-2">
          <span class="input-group-text back-icon"><i class="fa fa-user fa-fw"></i></span>
          <input type="text" value="{{user.name}}" name="name" class="form-control {{#if errors.name}}is-invalid{{/if}}" placeholder="Nombre">
          {{#if errors.name}}<div class="invalid-feedback">{{errors.name}}</div>{{/if}}       
        </div>           

        <div class="input-group mb-4"><span class="input-group-text back-icon"><i class="fa fa-user fa-fw" ></i></span>     
          <input
            type="text"
            value="{{user.surname}}"
            name="surname"
            class="form-control
            {{#if errors.surname}}is-invalid{{/if}}"
            placeholder="Apellido"
          >
          {{#if errors.surname}}<div class="invalid-feedback">{{errors.surname}}</div>{{/if}}  
        </div>
        

        <div class="input-group mb-4"><span class="input-group-text back-icon"><i class="fa fa-mobile fa-fw"></i></span>
          <input
            type="number"
            value="{{user.phone}}"
            name="phone"
            class="form-control {{#if errors.phone}}is-invalid{{/if}}"
            placeholder="Telefono"              
          >
          {{#if errors.phone}}<div class="invalid-feedback">{{errors.phone}}</div>{{/if}}
        </div>
              
             
        
      
          <div class="input-group mb-4">
            <span class="input-group-text back-icon"><i class="fa fa-envelope fa-fw"></i></span>
            <input
              type="email"
              value="{{user.email}}"
              name="email"
              class="form-control {{#if errors.email}}is-invalid{{/if}}"
              placeholder="user@example.org"
              
            >
            {{#if errors.email}}<div class="invalid-feedback">{{errors.email}}</div>{{/if}}   
        </div>
        

        <div class="input-group mb-4">  
          <span class="input-group-text back-icon"><i class="fa fa-lock fa-fw"></i></span>                  
          <input
            type="password"
            value="{{user.password}}"
            name="password"
            class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="******"
          >
          {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}  
        </div>
    

        <div class="text-end">
          <button type="submit" class="btn btn-pink">Registrarse</button>
        </div>        

      </form>

    </div>    
  </div>
</div>