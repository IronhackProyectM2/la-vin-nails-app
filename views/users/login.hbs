<div class="container view ">
  <div class="card">
    <div class="card-header">
      <h1 class="view-title"><strong>Login</strong>
    </strong></h1>
    </div>
    <div class="card-body">
      <form action="/login" method="POST">
        <div class="input-group mb-4 mt-2">
          <span class="input-group-text back-icon"><i class="fa fa-envelope fa-fw"></i></span>
          <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
           
        </div>
        <div class="input-group mb-4">
          <div class="input-group">
          <span class="input-group-text back-icon"><i class="fa fa-lock fa-fw"></i></span>
          <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="******" name="password">
          {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
          </div>  
        </div>
          
        <button type="submit" class="btn btn-pink">Login</button>
        <a class="btn btn-outline btn-pink" type="button" href="users/new">Registrate</a>
      </form>
    </div>

  </div>
  
  

</div>