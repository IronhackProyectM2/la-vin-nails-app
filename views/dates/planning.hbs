<h1>Citas Solicitadas</h1>

<div class="btn-group">
  <a href="/dates/list/confirmed" class="btn btn-primary">Volver atr√°s</a>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th class="text-center">Turno 1</th>
      <th class="text-center">Turno 2</th>
      <th class="text-center">Turno 3</th>
      <th class="text-center">Turno 4</th>
      <th class="text-center">Turno 5</th>
      <th class="text-center">Turno 6</th>
      <th class="text-center">Turno 7</th>
      <th class="text-center">Turno 8</th>
    </tr>
  </thead>

  {{#each dates as |date|}}
  <p>{{date.user}}</p>
    <tr>
      <td>
        {{#isApoimentToday date}}
          <button
            class="btn btn-primary"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#{{date.id}}"
            aria-expanded="false"
            aria-controls="collapseExample"
          >
            {{date.user.name}}
          </button>
        {{/isApoimentToday}}

      </td>
    </tr>
    <tr>
      <td>
        {{#isApoimentTomorrow date}}
          <button
            class="btn btn-primary"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#{{date.id}}"
            aria-expanded="false"
            aria-controls="collapseExample"
          >
            {{date.user.name}}
          </button>
        {{/isApoimentTomorrow}}

      </td>
    </tr>

  {{/each}}
</table>